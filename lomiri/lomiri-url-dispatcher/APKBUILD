# Contributor: Bart Ribbers <bribbers@disroot.org>
# Maintainer: Luca Weiss <luca@z3ntu.xyz>
pkgname=lomiri-url-dispatcher
pkgver=0_git20211110
_commit="cce9e6e8290cc09bb3d7882c89caf97861b33f72"
pkgrel=0
pkgdesc="Service to allow sending of URLs and get handlers started"
arch="all"
url="https://gitlab.com/ubports/core/url-dispatcher"
license="LGPL-3.0-only"
depends_dev="lomiri-app-launch-dev json-glib-dev click-dev libapparmor-dev"
makedepends="$depends_dev cmake dbus-test-runner cmake-extras glib-dev gtest-dev gmock intltool dbus-test-runner-dev"
checkdepends="py3-dbusmock"
source="https://gitlab.com/ubports/core/lomiri-url-dispatcher/-/archive/$_commit/lomiri-url-dispatcher-$_commit.tar.gz"
subpackages="$pkgname-dev"
builddir="$srcdir/$pkgname-$_commit"
options="!check" # several tests hang

build() {
	cmake -B build \
		-DCMAKE_BUILD_TYPE=None \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib \
		-Dwerror=FALSE
	make -C build
}

check() {
	cd build
	CTEST_OUTPUT_ON_FAILURE=TRUE ctest
}

package() {
	make -C build DESTDIR="$pkgdir" install
}

sha512sums="
