pkgdesc="System Settings application for Unity8"
url="https://gitlab.com/ubports/core/lomiri-system-settings"
arch="all"
license="GPL-3.0-only"
depends="lomiri-ui-toolkit lomiri-settings-components"
makedepends="cmake cmake-extras qt5-qtbase-dev upower-dev networkmanager-dev accountsservice-ubuntu-dev geonames-dev icu-dev libqtdbusmock gsettings-qt-dev click-dev gnome-desktop-dev trust-store-dev qt5-qtdeclarative-dev qt5-qtdeclarative intltool"
checkdepends="xvfb-run py3-xdg py3-dbusmock"
source="https://gitlab.com/ubports/core/lomiri-system-settings/-/archive/$_commit/lomiri-system-settings-$_commit.tar.gz
	0002-Don-t-build-update-components.patch
	0003-Use-qmltestrunner-qt5.patch"
builddir="$srcdir/$pkgname-$_commit"
options="pmb:strict !check" # 67% tests passed, 5 tests failed out of 15

build() {
	cmake -B build \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib
	make -C build
}

check() {
	cd build
	CTEST_OUTPUT_ON_FAILURE=TRUE ctest
}

package() {
	make -C build DESTDIR="$pkgdir" install
}

